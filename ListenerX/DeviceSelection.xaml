<Window x:Class="ListenerX.DeviceSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListenerX"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="White"
        Opacity="1"
        Title="Select device" Height="50" Width="500">
    <Grid>
        <Grid x:Name="grd_devices" Margin="0,0,0,28">
        </Grid>
        <Label x:Name="lbl_close" Content="Close" Foreground="Red" VerticalAlignment="Bottom" HorizontalContentAlignment="Right" HorizontalAlignment="Center" Margin="10,0,20,5" Width="480" />
    </Grid>

</Window>
