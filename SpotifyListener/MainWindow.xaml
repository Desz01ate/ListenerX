    <Window.CommandBindings>
        <CommandBinding Command="SaveAs" Executed="CommandBinding_Executed"></CommandBinding>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Alt"  Command="SaveAs"></KeyBinding>
    </Window.InputBindings>
    <Grid Margin="1,1,1,1" Name="MainWindowGrid" Background="Transparent">
        <Border x:Name="border_Form" Margin="5" Padding="5" BorderThickness="1" Background="White" BorderBrush="#d9d9d9" CornerRadius="25"/>

        <Image x:Name="AlbumImage" Margin="0,40,0,0" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Image.Clip>
                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,250,250" x:Name="AlbumImageRectangle"/>
            </Image.Clip>
        </Image>
        <local:SpotifySearchBox x:Name="cb_SearchBox" Background="Transparent" BorderBrush="Transparent" Focusable="false" Placeholder="Search for song here..."  FilterMode="None" Margin="300,507,0,0" Width="600" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" VerticalContentAlignment="Center">

        </local:SpotifySearchBox>


        <Button x:Name="btn_Minimize" Content="-" Background="Transparent" FontSize="25" Foreground="White" BorderThickness="0" Margin="875,9,81,499" Width="40" Height="40" Visibility="Visible" />
        <Button x:Name="btn_Close" Content="x" Background="Transparent" FontSize="20" Foreground="White" BorderThickness="0" Margin="929,8,27,500" Width="40" Height="40" Visibility="Visible" />
        <Label x:Name="lbl_Track" Content="Waiting for information..." HorizontalAlignment="Center" Margin="0,310,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalContentAlignment="Center" BorderThickness="1">
        </Label>
        <Label x:Name="lbl_Album" Content="" HorizontalAlignment="Center" Margin="0,350,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="18" Foreground="White" HorizontalContentAlignment="Center"/>
        <Label x:Name="lbl_Artist" Content="" HorizontalAlignment="Center" Margin="0,385,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="18" Foreground="White" HorizontalContentAlignment="Center"/>
        <ProgressBar x:Name="PlayProgress" Opacity="0.7" HorizontalAlignment="Center" Height="32" Margin="0,423,0,20" VerticalAlignment="Top" Width="630" MouseDown="PlayProgress_Click" Visibility="Hidden">
            <ProgressBar.Background>
                <SolidColorBrush Color="#FFE6E6E6" Opacity="0.3"/>
            </ProgressBar.Background>
        </ProgressBar>
        <Label x:Name="lbl_CurrentTime" Content="Label" HorizontalAlignment="Center" Margin="15,423,723,20" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="15" HorizontalContentAlignment="Center" Foreground="White" Visibility="Hidden"/>
        <Label x:Name="lbl_TimeLeft" Content="Label" HorizontalAlignment="Center" Margin="723,423,15,20" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="15" HorizontalContentAlignment="Center" Foreground="White" Visibility="Hidden"/>
        <Menu Name="menu1" Margin="0,0,0,0" Width="0" Height="0">
            <MenuItem Header="_File" >
                <MenuItem Name="menuOpen" Header="_Open..." Command="Open" InputGestureText="Ctrl+O"  />
                <MenuItem Name="menuSaveAs" Header="_Save as..." Command="SaveAs" InputGestureText="Ctrl+S"  />
            </MenuItem>
        </Menu>
        <local:PathButton x:Name="BackPath" Data="{StaticResource backPath}" Background="Transparent" BorderBrush="Transparent" Opacity="0" Margin="100,150,0,0" VerticalAlignment="Top" Width="40" Height="40" RenderTransformOrigin="1,2" Click="BackPath_Click" Focusable="False" Style="{StaticResource PathButtonStyle}" Fill="White"/>
        <local:PathButton x:Name="PlayPath" Data="{StaticResource playPath}" Background="Transparent" BorderBrush="Transparent" Opacity="0" Margin="300,150,0,0" VerticalAlignment="Top" Width="40" Height="40" RenderTransformOrigin="1,2" Click="PlayPath_Click" Focusable="False" Style="{StaticResource PathButtonStyle}" Fill="White"/>
        <local:PathButton x:Name="NextPath" Data="{StaticResource nextPath}" Background="Transparent" BorderBrush="Transparent" Opacity="0" Margin="500,150,0,0" VerticalAlignment="Top" Width="40" Height="40" RenderTransformOrigin="1,2" Click="NextPath_Click" Focusable="False" Style="{StaticResource PathButtonStyle}" Fill="White"/>
        <local:PathButton x:Name="VolumePath" Data="{StaticResource volumePath}" Background="Transparent" Opacity="0" Margin="50,225,0,0" VerticalAlignment="Top" Width="25" Height="25" RenderTransformOrigin="1,2" Click="VolumePath_Click" Focusable="False" Style="{StaticResource PathButtonStyle}"/>
        <ProgressBar x:Name="VolumeProgress" Opacity="0" Margin="350,231,36,0" VerticalAlignment="Top" Width="220" Height="15" RenderTransformOrigin="1,2" HorizontalContentAlignment="Center" MouseDown="VolumeProgress_MouseDown">
            <ProgressBar.Background>
                <SolidColorBrush Color="#FFE6E6E6" Opacity="0.3"/>
            </ProgressBar.Background>
        </ProgressBar>
        <Label x:Name="lbl_settings" Content="Settings" HorizontalAlignment="Left"  Margin="11,0,0,8" VerticalAlignment="Bottom" FontFamily="Microsoft Sans Serif" FontSize="13" HorizontalContentAlignment="Center" Width="118" MouseDown="Settings_Click" Foreground="White" Visibility="Hidden" />
        <Label x:Name="lbl_change_device" Content="Change Device" HorizontalAlignment="Left" Margin="150,0,0,8" VerticalAlignment="Bottom" FontFamily="Microsoft Sans Serif" FontSize="13" HorizontalContentAlignment="Center" Width="118" MouseDown="ChangeDevice_Click" Foreground="White" Visibility="Hidden"/>

    </Grid>
</Window>
