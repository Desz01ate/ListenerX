    <Window.CommandBindings>
        <CommandBinding Command="SaveAs" Executed="CommandBinding_Executed"></CommandBinding>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Alt"  Command="SaveAs"></KeyBinding>
    </Window.InputBindings>
    <Grid Margin="1,1,1,1" Name="MainWindowGrid">
        <Image x:Name="AlbumImage" Margin="0,40,0,0" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="Button" Visibility="Hidden" HorizontalAlignment="Left" Margin="54,78,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label x:Name="lbl_Track" Content="Waiting for information..." HorizontalAlignment="Center" Margin="0,310,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" BorderThickness="1">
        </Label>
        <Label x:Name="lbl_Album" Content="" HorizontalAlignment="Center" Margin="0,350,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="18" HorizontalContentAlignment="Center"/>
        <Label x:Name="lbl_Artist" Content="" HorizontalAlignment="Center" Margin="0,385,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="18" HorizontalContentAlignment="Center"/>
        <ProgressBar x:Name="PlayProgress" Opacity="0.7" HorizontalAlignment="Center" Height="32" Margin="0,423,0,20" VerticalAlignment="Top" Width="630" MouseDoubleClick="PlayProgress_Click">
            <ProgressBar.Background>
                <SolidColorBrush Color="#FFE6E6E6" Opacity="0.3"/>
            </ProgressBar.Background>
        </ProgressBar>
        <Label x:Name="lbl_CurrentTime" Content="Label" HorizontalAlignment="Center" Margin="15,423,723,20" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="15" HorizontalContentAlignment="Center"/>
        <Label x:Name="lbl_TimeLeft" Content="Label" HorizontalAlignment="Center" Margin="723,423,15,20" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="15" HorizontalContentAlignment="Center"/>
        <Menu Name="menu1" Margin="0,0,0,0" Width="0" Height="0">
            <MenuItem Header="_File" >
                <MenuItem Name="menuOpen" Header="_Open..." Command="Open" InputGestureText="Ctrl+O"  />
                <MenuItem Name="menuSaveAs" Header="_Save as..." Command="SaveAs" InputGestureText="Ctrl+S"  />
            </MenuItem>
        </Menu>
        <local:PathButton x:Name="BackPath" Data="{StaticResource backPath}" Background="Transparent" BorderBrush="Transparent" Opacity="0" Margin="100,150,0,0" VerticalAlignment="Top" Width="40" Height="40" RenderTransformOrigin="1,2" Click="BackPath_Click" Focusable="False" Style="{StaticResource PathButtonStyle}"/>
        <local:PathButton x:Name="PlayPath" Data="{StaticResource playPath}" Background="Transparent" BorderBrush="Transparent" Opacity="0" Margin="300,150,0,0" VerticalAlignment="Top" Width="40" Height="40" RenderTransformOrigin="1,2" Click="PlayPath_Click" Focusable="False" Style="{StaticResource PathButtonStyle}"/>
        <local:PathButton x:Name="NextPath" Data="{StaticResource nextPath}" Background="Transparent" BorderBrush="Transparent" Opacity="0" Margin="500,150,0,0" VerticalAlignment="Top" Width="40" Height="40" RenderTransformOrigin="1,2" Click="NextPath_Click" Focusable="False" Style="{StaticResource PathButtonStyle}"/>
        <local:PathButton x:Name="VolumePath" Data="{StaticResource volumePath}" Background="Transparent" Opacity="0" Margin="50,225,0,0" VerticalAlignment="Top" Width="25" Height="25" RenderTransformOrigin="1,2" Click="VolumePath_Click" Focusable="False" Style="{StaticResource PathButtonStyle}"/>
        <ProgressBar x:Name="VolumeProgress" Opacity="0" Margin="350,231,36,0" VerticalAlignment="Top" Width="220" Height="15" RenderTransformOrigin="1,2" HorizontalContentAlignment="Center" MouseDown="VolumeProgress_MouseDown">
            <ProgressBar.Background>
                <SolidColorBrush Color="#FFE6E6E6" Opacity="0.3"/>
            </ProgressBar.Background>
        </ProgressBar>
        <Label x:Name="lbl_change_device" Content="Change Device" HorizontalAlignment="Center" Margin="11,480,661,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="15" HorizontalContentAlignment="Center" Width="118" MouseDown="ChangeDevice_Click" Visibility="Hidden"/>
    </Grid>
</Window>
